<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/sales_constrant_layout"
    android:paddingLeft="17dp"
    android:paddingBottom="17dp"
    android:paddingTop="17dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="119dp"
        android:layout_height="87dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="17dp"
        >
    <ImageView
        android:id="@+id/item_Photo_ImageView"
        android:layout_width="119dp"
        android:layout_height="87dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/item_name_TextView"
        android:layout_width="119dp"
        android:layout_height="33dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="1dp"
        android:text="Test Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_group_TextView"
        android:layout_width="121dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="test support text"
        app:layout_constraintTop_toBottomOf="@+id/item_name_TextView" />

    <ImageView
        android:id="@+id/cart_imageView"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="152dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/images"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/discount_ammount"
        android:layout_width="46dp"
        android:layout_height="20dp"
        android:layout_marginStart="57dp"
        android:text="-50%"
        app:layout_constraintStart_toEndOf="@+id/item_Photo_ImageView"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/old_old_price"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:layout_marginBottom="2dp"
        android:text="100p"
        app:layout_constraintBottom_toTopOf="@+id/new_price"
        tools:layout_editor_absoluteX="311dp" />

    <TextView
        android:id="@+id/new_price"
        android:layout_width="36dp"
        android:layout_height="18dp"
        android:layout_marginStart="72dp"
        android:text="50p"
        app:layout_constraintStart_toEndOf="@+id/discount_ammount"
        tools:layout_editor_absoluteY="86dp" />

</android.support.constraint.ConstraintLayout>